<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:background="@drawable/actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/class_room"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thêm lớp"
            android:textSize="19sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/add_class_close"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/border_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <EditText
            android:id="@+id/inp_class_name"
            android:hint="Tên lớp"
            android:padding="15dp"
            android:maxLines="1"
            android:maxLength="50"
            android:fontFamily="sans-serif-light"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_round" />
        <EditText
            android:id="@+id/inp_school_year"
            android:padding="15dp"
            android:fontFamily="sans-serif-light"
            android:textSize="19sp"
            android:layout_marginTop="15dp"
            android:digits="0123456789-"
            android:inputType="numberDecimal"
            android:hint="Niên khóa"
            android:maxLines="1"
            android:maxLength="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_round" />
        <Button
            android:id="@+id/btn_add_class"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Thêm lớp"
            android:textColor="@color/white"
            android:background="@drawable/btn_success_round"/>
    </LinearLayout>

</LinearLayout>